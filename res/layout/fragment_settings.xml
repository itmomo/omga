<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    
    >
    
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="2dp"
	    android:layout_marginTop="20dp"
	    android:background="#eeeeee"
	    />
	
	<RelativeLayout 
        android:id="@+id/settings_push"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        >
        <TextView 
            android:id="@+id/settings_push_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextTheme.tipstheme"
            android:text="接收推送消息"
            android:layout_centerVertical="true"
            android:paddingTop="8dip"
            android:paddingBottom="8dip"
            />
        <CheckBox 
            android:id="@+id/settings_push_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:layout_alignParentRight="true"
            android:paddingRight="15dp"
            android:layout_centerVertical="true"
            android:button="@drawable/selector_push_switch"
            android:checked="true"
            />
    </RelativeLayout>
    <View 
	    android:layout_width="match_parent"
	    android:layout_height="1px"
	    android:background="#eeeeee"
	    />
	
	<RelativeLayout 
        android:id="@+id/settings_auto_download_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@drawable/selector_settings_item_down"
        >
        <TextView 
            android:id="@+id/settings_auto_download_image_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextTheme.tipstheme"
            android:text="2G/3G下省流量"
            android:layout_centerVertical="true"
            android:paddingTop="8dp"
        	android:paddingBottom="8dp"
            />
        <CheckBox 
            android:id="@+id/settings_auto_download_image_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:paddingRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:button="@drawable/selector_push_switch"
            android:checked="true"
            />
    </RelativeLayout>
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="1px"
	    android:background="#eeeeee"
	    />
	
	<RelativeLayout 
        android:id="@+id/settings_cache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@drawable/selector_settings_item_down"
        >
        <TextView 
            android:id="@+id/settings_cache_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextTheme.tipstheme"
            android:text="清除缓存"
            android:layout_centerVertical="true"
            android:paddingTop="8dp"
        	android:paddingBottom="8dp"
            />
    </RelativeLayout>
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="1px"
	    android:background="#eeeeee"
	    />
	<RelativeLayout 
        android:id="@+id/settings_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@drawable/selector_settings_item_down"
        >
        <TextView 
            android:id="@+id/settings_date_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextTheme.tipstheme"
            android:text="检查更新"
            android:layout_centerVertical="true"
            android:paddingTop="8dp"
        	android:paddingBottom="8dp"
            />
    </RelativeLayout>
    <TextView 
        android:id="@+id/user_logout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        style="@style/TextTheme.tipstheme_buttontext"
        android:text="退出登录"
        android:background="@drawable/selector_logout"
        android:gravity="center"
        android:paddingTop="12dip"
        android:paddingBottom="12dip"
        android:layout_marginTop="48dp"
        />
</LinearLayout>
</ScrollView>
